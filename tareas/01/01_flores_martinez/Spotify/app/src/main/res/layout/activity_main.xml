<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/artista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pink Floyd"
        android:textSize="30dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textColor="#FFF"
        />

    <TextView
        android:id="@+id/cancion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wish you were here"
        android:textSize="25dp"
        android:layout_below="@id/artista"
        android:gravity="center"
        android:textColor="#FFF"
        />

    <ImageView
        android:id="@+id/portada"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_below="@id/cancion"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/pinkfloyd"
        />

    <ImageView
        android:id="@+id/progreso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/portada"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="45dp"
        android:src="@drawable/linea"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progreso"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:src="@drawable/retroceder"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progreso"
        android:layout_marginTop="10dp"
        android:src="@drawable/play"
        android:layout_centerHorizontal="true"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progreso"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="270dp"
        android:src="@drawable/siguiente"
        />

</RelativeLayout>