<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Silverstein"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:textColor="#FFF"
        />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="'When broken is Easily Fixed"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="#FFF"
        />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="My heroine"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:textColor="#FFF"
        />
    <ImageView
        android:id="@+id/silverstein"
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text"
        android:layout_marginTop="50dp"
        android:src="@drawable/full" />

    <Button
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/silverstein"
        android:layout_alignParentLeft="true"
        android:drawableLeft="@drawable/ant" />


    <Button
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/silverstein"
        android:layout_alignParentRight="true"
        android:drawableLeft="@drawable/sig" />

    <Button
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/silverstein"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/play" />

</RelativeLayout>